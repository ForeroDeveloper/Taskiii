<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:forceDarkAllowed="false"
    tools:context=".CreacionDeRecibo">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logo_negocio_recibo"
            android:src="@drawable/logo_taski"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/txtNombreNegocioRecibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:textAllCaps="true"
            android:text="taski.co f.o.r.d.e.v"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtNitNegocioRecibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="null"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtUbicacionNegocioRecibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="null"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtDireccionNegocioRecibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="null"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/txtTelefonoNegocio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="null"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:text="*********************************************"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="============================================="
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_fecha_factura_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:layout_marginStart="40dp"
            android:fontFamily="serif-monospace"
            android:text="Fecha: 2021/01/14"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtNombreVendedorRecibo"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            android:fontFamily="serif-monospace"
            android:text="Vende: YENNY CRUZ RESTREPO"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_numero_factura_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            android:fontFamily="serif-monospace"
            android:text="FACTURA NÂ°: "
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_nombre_cliente"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="40dp"
            android:fontFamily="serif-monospace"
            android:text="CLIENTE: CAMILO ARANGO"
            android:textSize="12sp"
            android:textStyle="bold"/>



        <LinearLayout
            android:id="@+id/contenido_productos"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/negro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:text="DESCRIPCION"
                    android:textSize="12sp"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="start"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/negro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:fontFamily="serif-monospace"
                    android:text="CANT."
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="start"
                android:paddingEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/negro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:text="PRECIO"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/negro"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:text="VALOR"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/venta_rapida_info"
            android:visibility="gone"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginEnd="40dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtProductoRecibo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="serif-monospace"
                android:padding="5dp"
                android:text="venta"
                android:textAlignment="textStart"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/txtCantidadRecibo"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="serif-monospace"
                android:padding="5dp"
                android:text="1"
                android:textAlignment="textEnd"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/txtPrecioRecibo"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="serif-monospace"
                android:padding="5dp"
                android:text="total"
                android:textAlignment="textEnd"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/txtTotalRecibo"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textAlignment="textEnd"
                android:fontFamily="serif-monospace"
                android:padding="5dp"
                android:text="Valor Total"
                android:textColor="@color/negro" />

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lista_de_productos_venta_recibo"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lista_de_productos_venta_recibo_inventario"
            android:layout_width="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="serif-monospace"
            android:text="============================================"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/subtotal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="serif-monospace"
                android:textColor="@color/negro"
                android:text="SUBTOTAL: "
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_sub_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:fontFamily="serif-monospace"
                android:textColor="@color/negro"
                android:text="$ 125000"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/descuento"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="serif-monospace"
                android:textColor="@color/negro"
                android:text="DESCUENTO: "
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_descuento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:fontFamily="serif-monospace"
                android:textColor="@color/negro"
                android:text="$ 125000"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="serif-monospace"
                android:textColor="@color/negro"
                android:text="TOTAL: "
                android:layout_centerInParent="true"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_total_factura_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="45dp"
                android:fontFamily="serif-monospace"
                android:textColor="@color/negro"
                android:text="$ 125000"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </RelativeLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="serif-monospace"
            android:text="********************************************"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:text="GRACIAS POR SU COMPRA!"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtNombreNegocioRecibo2"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="serif-monospace"
            android:text="- taski app -"
            android:textSize="10sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:gravity="center"
            android:visibility="visible"
            android:id="@+id/marcaDeAgua"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_logo_taski"
                android:src="@drawable/logo_taski"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:layout_height="30dp" />


            <TextView
                android:layout_below="@+id/img_logo_taski"
                android:id="@+id/creado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:textColor="@color/negro"
                android:text="Creado con"
                android:paddingEnd="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@+id/img_logo_taski"
                android:id="@+id/taskii"
                android:layout_centerHorizontal="true"
                android:paddingStart="70dp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din"
                android:textColor="@color/primario"
                android:text="taski"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_print"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ENVIAR | IMPRIMIR"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            app:cornerRadius="20dp"
            android:fontFamily="@font/din"
            android:layout_marginTop="10dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="60dp" />

    </LinearLayout>



</androidx.core.widget.NestedScrollView>