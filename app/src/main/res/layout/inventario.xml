<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventario">

    <RelativeLayout
        android:layout_margin="20dp"
        android:id="@+id/cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Productos"
            android:textSize="20dp"
            android:textColor="@color/negro"
            android:fontFamily="@font/mazzard"/>

        <ImageView
            android:id="@+id/search"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_search"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/gris_claro" />

        <ImageView
            android:layout_toStartOf="@+id/search"
            android:layout_marginEnd="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_scanner"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/gris_claro" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/estasts"
        android:weightSum="2"
        android:layout_below="@+id/cabecera"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Productos"
                android:textSize="14dp"
                android:fontFamily="@font/mazzard"/>

            <TextView
                android:id="@+id/txtTotalProductos"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128"
                android:textSize="34dp"
                android:textColor="@color/negro"
                android:fontFamily="@font/mazzard"/>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#ECF5EE"
                android:layout_width="100dp"
                android:layout_height="30dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        app:cardBackgroundColor="#458F5A"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_margin="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_arrow_arriba"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#458F5A"
                        android:text="+8.00%"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/din"
                        android:layout_toEndOf="@+id/card1"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>



            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mazzard"
                android:text="Total Stock"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtTotalStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mazzard"
                android:text="2.350"
                android:textColor="@color/negro"
                android:textSize="34dp" />

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="5dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#EBF9FD"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="#00B2EB"
                        app:cardCornerRadius="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:src="@drawable/ic_arrow_arriba" />

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/card2"
                        android:fontFamily="@font/din"
                        android:text="+2.34%"
                        android:textColor="#00B2EB" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/estasts"
        android:layout_margin="20dp"
        android:id="@+id/cabeceraLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de productos"
            android:textSize="14dp"
            android:fontFamily="@font/mazzard"/>

        <ImageView
            android:id="@+id/filter"
            android:rotation="90"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_filter"
            android:layout_centerVertical="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:tint="@color/gris_claro" />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/cabeceraLista"
        android:id="@+id/lista_de_productos_venta"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/faq_inventario"
        android:onClick="agregarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16sp"
        android:textSize="12dp"
        android:text="Agregar Producto"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        app:backgroundTint="@color/primario"
        app:tint="@color/white"
        android:src="@drawable/ic_add"/>

</RelativeLayout>