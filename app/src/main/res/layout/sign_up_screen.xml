<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpScreen">

    <RelativeLayout
        android:id="@+id/superior"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/logo_taski"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/taski"
            android:fontFamily="@font/din"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/primario"
            android:layout_toRightOf="@+id/logo"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/superior"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/taski_google_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ingresa con tu cuenta\nde Google"
                android:layout_gravity="center"
                android:fontFamily="@font/din"
                android:textSize="28sp"
                android:textColor="@color/primario"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="Selecciona tu cuenta de Google\nque uses frecuentemente!"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din"
                android:textSize="14sp"/>

        </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_google"
        android:layout_weight="1"
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_google"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            app:tint="@color/white" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar con Google"
            android:fontFamily="@font/din"
            android:textSize="16sp"
            android:textColor="@color/white"/>
    </RelativeLayout>


</RelativeLayout>