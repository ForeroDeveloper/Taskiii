    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneradorDeQr">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/mazzard"
        android:gravity="center"
        android:text="Imprime y pega este codigo QR en tus productos"
        android:textSize="18dp" />


    <!--    <TextView
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titulo"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif-monospace"
            android:text="Recomendaciones: Envia por Whatsapp los codigos de cada producto, luego inicia en tu Whatsapp Web y descarga todos tus codigos QR generados, adjuntalos en una hoja de Word, e Imprime.\nRecorta y pega en tus productos.\nY listo!, puedes escanear tus productos en cualquier ocasiÃ³n!"
            android:textColor="@color/negro"
            android:textSize="13sp"
            android:textStyle="bold" />-->


    <RelativeLayout
        android:id="@+id/qr_contenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/img_qr_code"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/nombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_qr_code"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="Nombre Producto:"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_taski" />

        <TextView
            android:id="@+id/creado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_qr_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:fontFamily="serif-monospace"
            android:paddingEnd="60dp"
            android:text="Creado con"
            android:textColor="@color/negro"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_qr_code"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/din"
            android:paddingStart="60dp"
            android:text="taski"
            android:textColor="@color/primario"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/faq_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_guardar"
        app:backgroundTint="@color/primario"
        app:fabCustomSize="55dp"
        app:tint="@color/white" />

</RelativeLayout>