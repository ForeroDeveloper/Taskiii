<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    tools:context=".BasicoPlanFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/ventajas"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fac_inf"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_disponible"
                        app:tint="#262626" />

                    <TextView
                        android:layout_toEndOf="@+id/fac_inf"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mazzard_light"
                        android:text="20 | Facturas - Recibos de cobro - inventario"
                        android:textColor="@color/negro"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/qr"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_disponible"
                        app:tint="#262626"/>

                    <TextView
                        android:layout_toEndOf="@+id/qr"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mazzard_light"
                        android:text="Escanear productos con QR en 20 Facturas"
                        android:textColor="@color/negro"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ads"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_no_disponible"
                        app:tint="#DEDEDE" />

                    <TextView
                        android:layout_toEndOf="@+id/ads"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mazzard_light"
                        android:text="Sin Anuncios publicitarios - ADs"
                        android:textColor="#B4B4B4"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/send"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_no_disponible"
                        app:tint="#DEDEDE" />

                    <TextView
                        android:layout_toEndOf="@+id/send"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mazzard_light"
                        android:text="Enviar facturas de cobro y ventas ilimitadas"
                        android:textColor="#B4B4B4"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/invent"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_no_disponible"
                        app:tint="#DEDEDE" />

                    <TextView
                        android:layout_toEndOf="@+id/invent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mazzard_light"
                        android:text="Agregar productos ilimitados al inventario"
                        android:textColor="#B4B4B4"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/support"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_no_disponible"
                        app:tint="#DEDEDE" />

                    <TextView
                        android:layout_toEndOf="@+id/support"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mazzard_light"
                        android:text="Soporte Premium prioritario, sin esperas"
                        android:textColor="#B4B4B4"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                </RelativeLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@+id/ventajas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/puede"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Obtener Taski Gold\nAcceso ilimitado a:"
                android:textColor="@color/negro"
                android:textSize="12dp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fac1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_fac_ilimitadas"/>

                <TextView
                    android:layout_toEndOf="@+id/fac1"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mazzard_light"
                    android:text="Facturas Ilimitadas, ventas y gastos"
                    android:textColor="@color/negro"
                    android:textSize="12dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/sendFac"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_enviar_fac"/>

                <TextView
                    android:layout_toEndOf="@+id/sendFac"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mazzard_light"
                    android:text="Enviar facturas de cobro y ventas ilimitadas"
                    android:textColor="@color/negro"
                    android:textSize="12dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/inventarioIli"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_inv_ilimitado"/>

                <TextView
                    android:layout_toEndOf="@+id/inventarioIli"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mazzard_light"
                    android:text="Agregar productos ilimitados al inventario"
                    android:textColor="@color/negro"
                    android:textSize="12dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_marginBottom="5dp"
                android:id="@+id/btn_comprar_taski"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <RelativeLayout
                    android:id="@+id/seguirUsandoVersion"
                    android:background="@drawable/gradiente_basico"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_below="@+id/precio"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:gravity="center"
                        android:text="Seguir Usando la licencia básica"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_toEndOf="@+id/send"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/brandon_grotesque_light"
                android:text="Esta versión de suscripción es la más basica, por lo cual sus funciones son limitadas, con el propósito que el usuario pruebe sus funcionalidades por completo, antes de pasar a una suscripción Premium o Gold."
                android:textColor="#B4B4B4"
                android:textSize="11dp"
                android:textStyle="normal" />


        </LinearLayout>




    </RelativeLayout>


</FrameLayout>