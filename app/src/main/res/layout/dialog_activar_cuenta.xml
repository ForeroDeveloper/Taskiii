<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="280dp"
    android:layout_height="245dp"
    android:layout_gravity="center"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:elevation="20dp"
    app:cardCornerRadius="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_seleccionar_fecha"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_gold_03"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_seleccionar_fecha"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/din"
            android:text="Ingresa tu código de activación"
            android:textColor="@color/negro" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/codigo"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="#E8BC73"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopStart="30dp"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxBackgroundColor="#F8EDD7"
            app:boxStrokeWidth="0dp"
            app:hintEnabled="false"
            android:hint="500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtCodigo"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:fontFamily="@font/din"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirmar"
            android:layout_width="wrap_content"
            android:fontFamily="@font/din"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:textSize="14dp"
            android:layout_marginBottom="5dp"
            android:text="Confirmar"
            android:textAllCaps="false"
            app:backgroundTint="#D79D44" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@+id/btn_confirmar"
            android:fontFamily="@font/din"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/gris_oscuro"
            android:textSize="16sp"
            app:backgroundTint="@android:color/transparent" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
